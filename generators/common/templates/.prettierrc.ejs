# Prettier configuration

printWidth: 140
singleQuote: true
tabWidth: <%= prettierTabWidth %>
useTabs: false

# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
bracketSameLine: false

plugins:
  - prettier-plugin-packagejson
<%_ if (backendTypeJavaAny) { _%>
  - prettier-plugin-java
<%_ } _%>

# java rules:
overrides:
  - files: "tsconfig.json"
    options:
      parser: "json"
<%_ if (backendTypeJavaAny) { _%>
  - files: "*.java"
    options:
      tabWidth: 4
<%_ } _%>
